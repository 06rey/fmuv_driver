<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/formBackground"
    android:orientation="vertical"
    tools:context=".view.activity.ForgotPassword1Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!-- Loading Bar -->
        <!-- Loading Bar -->
        <!-- Loading Bar -->

        <!-- Content Body -->
        <!-- Content Body -->
        <!-- Content Body -->

        <LinearLayout
            android:id="@+id/contentBodyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="Find Your Account"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Please enter the number you used to login to search for your account." />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ProgressBar
                    android:id="@+id/loadingBar"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Small"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtErrorMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Contact number does not exists."
                    android:textColor="@color/darkOrange"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

            </RelativeLayout>

            <EditText
                android:id="@+id/editTxtContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/et_line"
                android:hint="Enter Contact Number" />

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/color1"
                android:onClick="onClickBtnSearch"
                android:text="Search"
                android:textColor="@color/formBackground" />

        </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>